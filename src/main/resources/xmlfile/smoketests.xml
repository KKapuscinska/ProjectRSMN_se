<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite parallel="tests" name="smoketests">
	
	<groups>
		 <run>
			 <include name="smoke"> </include>
	     </run>
	</groups>
	
	<listeners>
		<listener class-name="test.java.listeners.Listeners"/>
	</listeners>
	
 	<test name="BrokenLinks">
        <classes>
            <class name="test.java.tests.BrokenLinksTest"/>
        </classes>
    </test>

    <test name="LoginTest">
        <classes>
            <class name="test.java.tests.LoginTest"/>
        </classes>
    </test>

    <test name="ShoppingProcessTest">
        <classes>
            <class name="test.java.tests.ShoppingProcessTest"/>
        </classes>
    </test>
   

</suite> 
